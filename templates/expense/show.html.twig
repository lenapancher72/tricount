{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-3">
            <h1>Tricount</h1>
        </div>
        <div class="row">
            <div class="col-12 mt-3">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ expense.name }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ expense.createdAt ? expense.createdAt|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Amount</th>
                        <td>{{ expense.amount }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="d-flex">
                <a class="btn btn-primary" href="{{ path('expense_index', {'tricount_id': tricount}) }}">Retour</a>
                <a class="btn btn-primary" href="{{ path('expense_edit', {'tricount_id': tricount}) }}">Modifier</a>
                {{ include('expense/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
