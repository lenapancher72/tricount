{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Détails de la dépense "{{ expense.name }}"</h1>
            <table class="table">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ expense.name }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ expense.createdAt ? expense.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ expense.amount }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="d-flex">
            <a class="btn btn-primary me-2" href="{{ path('expense_index', {'id': tricount.id}) }}">Retour</a>
            <a class="btn btn-primary me-2" href="{{ path('expense_edit', {'tricount': tricount.id, 'expense_id': expense.id}) }}">Modifier</a>
            {{ include('expense/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
