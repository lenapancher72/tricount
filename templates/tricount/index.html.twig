{% extends 'base.html.twig' %}

{% block title %}Tricount index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 pe-5">
            <h1 class="mb-4">Liste des tricount</h1>
            <table class="table">
                <tbody>
                {% for tricount in tricounts %}
                    <tr>
                        <td class="d-flex align-items-center justify-content-between">
                            <div>
                                <a href="{{ path('expense_index', {'id': tricount.id}) }}"
                                   style="text-decoration: none">{{ tricount.name }}</a>
                            </div>
                            <div>
                                <a class="btn btn-primary" href="{{ path('tricount_show', {'id': tricount.id}) }}">En
                                    savoir
                                    plus</a>
                                <a class="btn btn-primary"
                                   href="{{ path('tricount_edit', {'id': tricount.id}) }}">Modifier</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Il n'y a pas de tricount.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-6">
            <h1 class="mb-4">Cr√©er un nouveau Tricount</h1>
            {{ include('tricount/_form.html.twig') }}
        </div>
    </div>
{% endblock %}
