{% extends 'base.html.twig' %}

{% block title %}Tricount index{% endblock %}

{% block body %}
    <h1>Tricount index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Device</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tricount in tricounts %}
            <tr>
                <td>{{ tricount.id }}</td>
                <td>{{ tricount.name }}</td>
                <td>{{ tricount.device }}</td>
                <td>{{ tricount.content }}</td>
                <td>
                    <a href="{{ path('tricount_show', {'id': tricount.id}) }}">show</a>
                    <a href="{{ path('tricount_edit', {'id': tricount.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tricount_new') }}">Create new</a>
{% endblock %}
