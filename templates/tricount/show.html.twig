{% extends 'base.html.twig' %}

{% block title %}Tricount{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-3">
            <h1>Tricount</h1>
        </div>
        <div class="row">
            <div class="col-12 mt-3">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ tricount.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ tricount.name }}</td>
                    </tr>
                    <tr>
                        <th>Device</th>
                        <td>{{ tricount.device }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ tricount.content }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="d-flex">
                <a class="btn btn-primary" href="{{ path('tricount_index') }}">Retour</a>
                <a class="btn btn-primary" href="{{ path('tricount_edit', {'id': tricount.id}) }}">Modifier</a>
                {{ include('tricount/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
